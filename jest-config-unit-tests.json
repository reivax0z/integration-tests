{
  "clearMocks": true,
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.json"
    }
  },
  "collectCoverageFrom": [
    "src/**"
  ],
  "coveragePathIgnorePatterns": [
    "/src/index*"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 60,
      "functions": 80,
      "lines": 80,
      "statements": -10
    }
  },
  "coverageDirectory": "coverage/unit",
  "testEnvironment": "node",
  "testRegex": "(/__tests__/.*|(\\.|/)(spec))\\.([jt]sx?)$",
  "moduleFileExtensions": [
    "ts",
    "js"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  }
}
